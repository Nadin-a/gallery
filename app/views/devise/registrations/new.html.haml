= content_for(:title, t('sign_up'))
.col-sm-6.col-md-6.col-lg-6.col-xl-6.well.col-centered.text-center
  %h2
    =t('sign_up')
  %br
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, class:'form-control', placeholder:'Email'
    .field
      = f.label t('name')
      %br/
      = f.text_field :name, autofocus: true, class:'form-control', placeholder:t('name')
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} #{t('characters_minimum')})
      %br/
      = f.password_field :password, autocomplete: 'off', class:'form-control', placeholder:t('password')
    .field
      = f.label t('confirmation_password')
      %br/
      = f.password_field :password_confirmation, autocomplete: 'off', class:'form-control', placeholder:t('confirmation_password')
    %br/
    .actions
      = f.submit t('sign_up'),class: 'btn btn-primary btn-block btn-lg outline'
    %br
  = render 'devise/shared/links'
