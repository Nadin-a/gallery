= content_for(:title, t('profile'))
.col-sm-6.col-md-6.col-lg-6.col-xl-6.well.col-centered.text-center
  .form-group
    %h2
      =t('edit_profile')
    %br
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put}) do |f|
      = devise_error_messages!
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class:'form-control', placeholder:'Email'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field
        = f.label t('name')
        %br/
        = f.text_field :name, class:'form-control', placeholder:t('name')
      %br
        = image_tag(current_user.avatar) if current_user.avatar?
        %br
        %br
        = f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png'
        = f.hidden_field :avatar_cache
        %h3
          = t('password')
      .field
        = f.label :password
        %i
          =t('leave_blank')
        %br/
        = f.password_field :password, autocomplete: 'off', value: '', class:'form-control', placeholder:t('password')
        - if @minimum_password_length
          %br/
          %em
            = @minimum_password_length
            = t('characters_minimum')
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: 'off', class:'form-control', placeholder:t('confirmation_password')
      %br
      .field
        = f.label :current_password
        %i
          =t('we_need_your_password')
        %br/
        = f.password_field :current_password, autocomplete: 'off', class:'form-control', placeholder:t('password')
      %br/
      .actions
        = f.submit t('update'), class: 'btn btn-primary btn-block btn-lg outline', data:{ toggle:'tooltip',placement:'right'}, title:t('save_changes')
    %h3
      =t('canceling_account')
    %p
      =t('unhappy')
      #{button_to t('cancel_my_account'), registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-primary btn-block btn-lg outline'}