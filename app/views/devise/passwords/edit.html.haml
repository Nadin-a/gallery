= content_for(:title, t('change_your_password'))
.col-sm-6.col-md-6.col-lg-6.col-xl-6.well.col-centered.text-center
  %h2
    = t('change_your_password')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .field
      = f.label :password, t('new_password')
      %br/
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
        %br/
      = f.password_field :password, autofocus: true, autocomplete: 'off', class:'form-control',
      type:'password', placeholder: t('password')
    .field
      = f.label :password_confirmation, t('cofirm_new_password')
      %br/
      = f.password_field :password_confirmation, autocomplete: 'off', class:'form-control',
       type:'password', placeholder: t('password')
    %br
    .actions
      = f.submit t('change_my_password'), class: 'btn btn-primary btn-block btn-lg outline'
    %br
  = render 'devise/shared/links'
