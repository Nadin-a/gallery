= content_for(:title, t('resend_confirmation_instructions'))
.col-sm-6.col-md-6.col-lg-6.col-xl-6.well.col-centered.text-center
  %h2
    = t('resend_confirmation_instructions')
  = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
    = devise_error_messages!
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true,
       value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class:'form-control',
       placeholder:'Email'
    .actions
      %br
      = f.submit t('resend_confirmation_instructions'), class: 'btn btn-primary btn-block btn-lg outline'
  %br
  = render 'devise/shared/links'
