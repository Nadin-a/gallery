.list-style
  .statisctic-label
    %b
      = t('statistics')
    %br
    = Time.current.to_time.strftime('%B %e at %l:%M %p')
  %br
    %table{style: 'width:100%'}
      %tr
        %th
          = t('name') + ':'
        %th
          = t('action') + ': '
        %th
          = t('action_time')+ ': '
      - @events.each do |event|
        %tr
          %td
            = event.user.name
          %td
            = event.properties['action_type']
          %td
            = event.time.to_time.strftime('%B %e at %l:%M %p')
