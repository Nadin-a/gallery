%body
  .container-fluid
    .row.well.show-image
      .col-lg-12.text-center
        .col-sm-4
          %b
            =t('title') + ':'
          %br
          = @image.title
        .col-sm-4
          %b
            =t('category') + ':'
          %br
          = link_to(@category.name,category_path(@category), {data:{ toggle:'tooltip',placement:'left' }, title:'Category of this image'})
        .col-sm-4
          %b
            =t('owner') + ':'
          %br
          = @category.owner.name
          %br
          %br
      .col-sm-12.text-center
        = image_tag(@image.picture)
      .col-sm-12.text-center
        %br
        = @image.description
      .col-sm-10
        =t('uploaded')
        = time_ago_in_words(@image.created_at)
        =t('ago')
      .col-sm-2
        .pull-right
          = render partial: 'images/like_form'
      .col-lg-12.text-center
        %hr
          .separator
          - if user_signed_in?
            - if current_user == @category.owner
              %a{remote: true, "data-target": '#updateImageModal', "data-toggle": 'modal', href: edit_category_image_path(@category, @image)}
                =t('update')
              |
              =link_to(t('delete'), category_image_path(@category, @image), method: :delete, data: { confirm: t('you_sure'), toggle:'tooltip',placement:'right' }, title: t('delete_this_image_tooltip'))
              %hr
                .separator
      .col-sm-12
        = render partial: 'shared/list_of_comments'
        %hr
          .separator
            = render partial: 'shared/comment_form'
        = render 'images/edit', locals: {category: @category, image: @image}