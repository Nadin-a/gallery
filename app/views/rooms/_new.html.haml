#myRoomModal.modal.fade{"aria-labelledby": 'myModalLabel', role: 'dialog', tabindex: '-1'}
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %button.close{"aria-label": t('close'), "data-dismiss": 'modal', type: 'button'}
          %span{"aria-hidden": 'true'} Ã—
        %h4#RoomModalLabel.modal-title
          = t('create_new_room')
      .modal-body
        .col-lg-12
        = form_for @room do |f|
          = render 'shared/error_messages', object: f.object
          .field
            = f.label t('name')
            %required
              *
            = f.text_field :name, maxlength: '20', autofocus: true, class:'form-control', placeholder:t('name'), required: true
          %br
          .actions
            .modal-footer
              %button.btn.btn-default{"data-dismiss": 'modal', type: 'button'}
                =t('close')
              = f.submit 'Create',  class: 'btn btn-primary active'
