#updateCategoryModal.modal.fade{"aria-labelledby": 'myModalLabel', role: 'dialog', tabindex: '-1'}
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %button.close{"aria-label": 'Close', "data-dismiss": 'modal', type: 'button'}
          %span{"aria-hidden": 'true'} Ã—
        %h4#updateCategoryModalLabel.modal-title
          Edit category
        .modal-body
          .col-lg-12
            = form_for @category do |f|
              = render 'shared/error_messages', object: f.object
              .field
                = f.label :name
                = f.text_field :name, autofocus: true, class:'form-control', placeholder:'Name'
              %br
              .actions
                .modal-footer
                  %button.btn.btn-default{"data-dismiss": 'modal', type: 'button'} Close
                  = f.submit 'Update',  class: 'btn btn-primary active'
