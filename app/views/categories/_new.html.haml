#myModal.modal.fade{"aria-labelledby": 'myModalLabel', role: 'dialog', tabindex: '-1'}
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %button.close{"aria-label": t('close'), "data-dismiss": 'modal', type: 'button'}
          %span{"aria-hidden": 'true'} Ã—
        %h4#myModalLabel.modal-title
          = t('new_category')
      .modal-body
        .col-lg-12
        = form_for @category do |f|
          = render 'shared/error_messages', object: f.object
          .field
            = f.label t('name')
            %required
              *
            = f.text_field :name, autofocus: true, class:'form-control', placeholder:t('name'), required: true
          %br
          .field
            = f.label t('cover')
            = f.file_field :cover, accept: 'image/jpg,image/jpeg,image/png', id:'uploaded_cover'
          %br
          .actions
            .modal-footer
              %button.btn.btn-default{"data-dismiss": 'modal', type: 'button'}
                =t('close')
              = f.submit 'Create',  class: 'btn btn-primary active'
