%body
  = content_for(:title, 'Home')
  - if @images.empty?
    .container.text-center.row.well
      %h2
        - if user_signed_in?
          = t('you_have_no_images')
        - else
          = t('no_images_on_site')
  - else
    #carousel-example-generic.carousel.slide{'data-ride': 'carousel'}
      / Indicators
      %ol.carousel-indicators
        %li.active{'data-slide-to': '0', 'data-target': '#carousel-example-generic'}
        - @images.count.times do |n|
          - next if n == 0
          %li{'data-slide-to': n, "data-target": '#carousel-example-generic'}
      / Wrapper for slides
      .carousel-inner{role:'listbox'}
        .item.active
          %a{href: category_image_path(@images.first.category, @images.first)}
            %img{alt: @images.first.title, src: @images.first.picture}
              .carousel-caption
                %h3
                  %p
                    =@images.first.title
        - @images.each do |image|
          - next if image == @images.first
          .item
            %a{href: category_image_path(image.category, image)}
              %img{alt: image.title, src: image.picture}
                .carousel-caption
                  %h3
                    %p
                      =image.title
      / Controls
      %a.left.carousel-control{"data-slide": 'prev', href:'#carousel-example-generic', role: 'button'}
        %span.glyphicon.glyphicon-chevron-left{'aria-hidden': 'true'}
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide": 'next', href: '#carousel-example-generic', role: 'button'}
        %span.glyphicon.glyphicon-chevron-right{'aria-hidden': 'true'}

