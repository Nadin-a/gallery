- @images.each do |image|
  .col-sm-4
    %br
    = link_to(image.title, category_image_path(image.category, image))
    %br
    = link_to(image_tag(image.picture.thumb.url), category_image_path(image.category, image))
    %br
      - if user_signed_in?
        - if current_user == Category.find(image.category_id).owner
          =link_to('Update', edit_category_image_path(image.category, image))
          =link_to('Delete', category_image_path(image.category, image), method: :delete, data: { confirm: 'You sure?' })
          %br
.col-sm-12
  = will_paginate @images
