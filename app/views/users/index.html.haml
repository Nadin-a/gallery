= content_for(:title, t('all_users'))
.col-sm-8.col-md-8.col-lg-8.col-xl-8.col-centered
  .panel.panel-default.user_panel
    .panel-heading
      %h3.panel-title
        = t('all_users')
    .panel-body
      - if @users.empty?
        = t('no_users')
      - else
        - @users.each do |user|
          .col-sm-12.col-md-12.col-lg-12.col-xl-12
            %hr
              .seprator
            .col-sm-6.col-md-6.col-lg-6.col-xl-6
              .text-center
                .long_text
                  .info-size
                    = link_to(user.name, user_path(user))
            .col-sm-6.col-md-6.col-lg-6.col-xl-6
              .info-size
                = t('reg_data')
                = time_ago_in_words(user.created_at) + t('ago')
                - if user.last_sign_in_at?
                  %br
                  = t('last_visit')
                  = time_ago_in_words(user.last_sign_in_at)+ t('ago')
              %br
              %br
      .text-center
        = will_paginate @users

